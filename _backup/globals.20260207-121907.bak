@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 0 0% 3.9%;
    --card: 0 0% 100%;
    --card-foreground: 0 0% 3.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 0 0% 3.9%;
    --primary: 0 0% 9%;
    --primary-foreground: 0 0% 98%;
    --secondary: 0 0% 96.1%;
    --secondary-foreground: 0 0% 9%;
    --muted: 0 0% 96.1%;
    --muted-foreground: 0 0% 45.1%;
    --accent: 0 0% 96.1%;
    --accent-foreground: 0 0% 9%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 98%;
    --border: 0 0% 89.8%;
    --input: 0 0% 89.8%;
    --ring: 0 0% 3.9%;
    --radius: 0.5rem;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
    font-feature-settings: "rlig" 1, "calt" 1;
  }
}



header.sticky.top-0.z-40 {
  background: rgba(255, 255, 255, 0.68) !important;
  border-color: rgba(0, 0, 0, 0.12) !important;
  backdrop-filter: blur(12px) !important;
}
header.sticky.top-0.z-40,
header.sticky.top-0.z-40 * {
  color: #111 !important;
}
header.sticky.top-0.z-40 svg {
  stroke: #111 !important;
}

@media (min-width: 901px) {
  .fx-header {
    padding-top: clamp(110px, 14vh, 170px) !important;
    font-size: clamp(2.2rem, 8.2vw, 8.4rem) !important;
    line-height: 0.86 !important;
  }

  .fx-content {
    grid-template-columns: 1fr 1.2fr 1fr !important;
  }

  .fx-center {
    height: min(54vh, 540px) !important;
  }

  .fx-featured {
    left: 0 !important;
    right: 0 !important;
    margin: 0 auto !important;
    width: min(78vw, 980px) !important;
  }

  .fx-featured-title {
